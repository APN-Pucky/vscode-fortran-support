{
	// Tasks as defined in package.json, used for launching debug mode
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "npm: compile",
			"detail": "tsc -watch -p ./",
			"isBackground": true
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: lint",
			"detail": "node ./node_modules/tslint/bin/tslint ./src/**/*.ts "
		},
		{
			"type": "npm",
			"script": "postinstall",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: postinstall",
			"detail": "node ./node_modules/vscode/bin/install"
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "npm: test",
			"detail": "CODE_TESTS_WORKSPACE='./' node ./node_modules/vscode/bin/test"
		},
	]
}