{
    "name": "linter-gfortran",
    "displayName": "fortran-linter",
    "description": "A linter for fortran code based on gfortran.",
    "version": "0.0.1",
    "publisher": "krvajal",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:Fortran"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "Fortran",
            "aliases": ["Fortran", "fortran"],
            "extensions": [".f90"]
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}